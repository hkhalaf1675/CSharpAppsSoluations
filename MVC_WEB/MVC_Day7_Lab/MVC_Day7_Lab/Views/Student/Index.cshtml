@model List<Student>
@{
    ViewBag.Title = "Index";
}
<div class="container">
    <table class="table">
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Birthday</th>
            <th></th>
        </tr>
        @{
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Fname</td>
                    <td>@item.Lname</td>
                    <td>@item.Address</td>
                    <td>@item.BirthDate</td>
                    <td>
                        <a class="btn btn-danger" asp-action="" asp-controller="Student">Delete</a>
                        <a class="btn btn-primary" asp-action="" asp-controller="Student">Update</a>
                    </td>
                </tr>
            }
        }
    </table>
    <a class="btn btn-success" asp-action="Create">Add New Student</a>
</div>