@model Student
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "Index";
}
<div class="container">
    <h2>Create New Student</h2>
    <form class="form" method="post" asp-action="Create" asp-controller="Student">
        <div class="form-group">
            <label asp-for="Fname"></label>
            <input class="form-control" asp-for="Fname" />
            <span class="text-danger" asp-validation-for="Fname"></span>
        </div>
        <div class="form-group">
            <label asp-for="Lname"></label>
            <input class="form-control" asp-for="Lname" />
            <span class="text-danger" asp-validation-for="Lname"></span>
        </div>
        <div class="form-group">
            <label asp-for="BirthDate"></label>
            <input class="form-control" asp-for="BirthDate" />
            <span class="text-danger" asp-validation-for="BirthDate"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address"></label>
            <input class="form-control" asp-for="Address" />
            <span class="text-danger" asp-validation-for="Address"></span>
        </div>
        <input type="submit" class="btn btn-success" value="Add" />
    </form>
</div>
