
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddInstructor</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        @{ 
            var inst = ViewData["inst"] as MVC_Day2_CRUDWithBootstrap.Models.Instructor;
        }
        <form action="/Instructor/Update" method="post">
            <div class="form-group">
                <input type="hidden" class="form-control" id="ID" name="id" value="@inst.ID" >
            </div>
            <div class="form-group">
                <label for="Name">Name</label>
                <input type="text" class="form-control" id="Name" name="name" value="@inst.Name">
            </div>
            <div class="form-group">
                <label for="Department">Department</label>
                <input type="text" class="form-control" id="Department" name="department" value="@inst.Department">
            </div>
            <button type="submit" class="btn btn-primary">Update Instrcutor</button>
        </form>
    </div>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</body>
</html>
