@model List<CRUD_MVC_DotFramework.Models.Student>
@{
    ViewBag.Title = "All Students";
}

<h2>Index</h2>
<div class="container">
    <a href="/Student/Create" class="btn btn-success w-100">Add New Student</a>
    @if (Model.Count == 0)
    {
        <div class="alert alert-dismissible alert-light">
            There is No Students
            To Add New One <a href="#" class="alert-link">Click here</a>
        </div>
    }
    else
    {
        <table class="table">
            <tr>
                <th>SSN</th>
                <th>Full Name</th>
                <th>Age</th>
                <th>Level</th>
                <th></th>
                <th></th>
            </tr>
            @{
                foreach (var student in Model)
                {
                    <tr>
                        <td>@student.SSN</td>
                        <td>@student.FullName</td>
                        <td>@student.Age</td>
                        <td>@student.Level</td>
                        @Html.Partial("_ButtonUpdateDeletePartialView", student.SSN)
                    </tr>
                }
            }
        </table>
        @Html.Partial("PartialViews/_PartialDeleteStudentInfo")
    }
</div>

