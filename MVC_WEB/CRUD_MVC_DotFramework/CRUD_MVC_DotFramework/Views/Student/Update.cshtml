@model CRUD_MVC_DotFramework.Models.Student
@{
    ViewBag.Title = "Update Student";
}

<h2>Update Student</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.SSN)
            @Html.EditorFor(model => model.SSN, new { htmlAttributes = new { @class = "form-control" , @readonly = "readonly" } })
        </div>
        @Html.Partial("PartialViews/_PartialCreateUpdateStudent")
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-primary w-100 my-2" />
            </div>
        </div>
    </div>
}
