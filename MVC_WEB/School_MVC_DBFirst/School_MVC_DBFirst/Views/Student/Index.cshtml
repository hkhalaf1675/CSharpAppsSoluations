@model List<School_MVC_DBFirst.Models.Student>
@{
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
    ViewBag.Title = "Home";
}
<h1 class="text-center">All Students</h1>
@if (TempData["studentName"] != null)
{
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong>@TempData["studentName"].ToString()</strong> Was Added successfully .
    </div>
}
@if (TempData["studentID"] != null)
{
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        Student With ID <strong>@TempData["studentID"].ToString()</strong> Was Deleted successfully .
    </div>
}
@if (TempData["studentIDUpdate"] != null)
{
    <div class="alert alert-dismissible alert-primary">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        Student With ID <strong>@TempData["studentIDUpdate"].ToString()</strong> Was Updated successfully .
    </div>
}
@Html.ActionLink("Add New Student", "Create", "Student", new { @class = "btn btn-success w-100 my-2" })
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>First name</th>
        <th>Last Name</th>
        <th>Birth date</th>
        <th>Address</th>
        <th></th>
        <th></th>
    </tr>
    @{
        foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FName</td>
                <td>@item.LName</td>
                <td>@item.BirthDate</td>
                <td>@item.Address</td>
                @Html.Partial("_ButtonsUpdateDelete",item.Id)
            </tr>
        }
    }
</table>