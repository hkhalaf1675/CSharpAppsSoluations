@{
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
    ViewBag.Title = "Home Page";
}

<main class="container my-3 ">
    <ul class="list-group my-2">
        <li class="list-group-item btn btn-light ">
            <a href="/Departments/Index" class="btn d-flex justify-content-between align-items-center">
                Departments
                <span class="badge bg-primary rounded-pill">@School_MVC_DBFirst.Models.CourseBL.AllDepartments().Count</span>
            </a>
        </li>
        <li class="list-group-item btn btn-light ">
            <a href="/Instructors/Index" class="btn d-flex justify-content-between align-items-center">
                Instructors
                <span class="badge bg-primary rounded-pill">@School_MVC_DBFirst.Models.CourseBL.AllInstructors().Count</span>
            </a>
        </li>
        <li class="list-group-item btn btn-light ">
            <a href="/Student/Index" class="btn d-flex justify-content-between align-items-center">
                Students
                <span class="badge bg-primary rounded-pill">@School_MVC_DBFirst.Models.StudentBL.AllStudents().Count</span>
            </a>
        </li>
        <li class="list-group-item btn btn-light ">
            <a href="/Course/Index" class="btn d-flex justify-content-between align-items-center">
                Courses
                <span class="badge bg-primary rounded-pill">@School_MVC_DBFirst.Models.CourseBL.AllCourses().Count</span>
            </a>
        </li>
    </ul>
    <div class="card border-primary mb-3" style="max-width: 20rem;" onclick="AddStudentsGrades()">
        <div class="card-header bg-white">Add Students Grades</div>
        <div class="card-body btn btn-light">
            <p class="card-text">
                Add Students Course and the grade of the student on each course
            </p>
        </div>
    </div>
</main>
<script>
    function AddStudentsGrades() {
        window.location = "#";
    }
</script>